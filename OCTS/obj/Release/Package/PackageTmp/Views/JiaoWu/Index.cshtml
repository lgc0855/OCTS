@{
 Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">学期管理</h1>
        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!--添加新学期-->
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-1 col-md-1">
                <label style="margin-top:6px">新学期</label>
            </div>

            <div class="form-group col-lg-5 col-md-5">
                <label for="dtp_input2" class="col-lg-2 col-md-2 control-label" style="margin-top:6px">开始</label>
                <div class="input-group date form_date " data-date="" data-date-format="dd mm yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                    <input class="form-control" id="start-time" size="16" type="text" value="" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <input type="hidden" id="dtp_input2" value="" /><br />
            </div>
            <div class="form-group col-lg-5 col-md-5">
                <label for="dtp_input2" class="col-lg-2 col-md-2 control-label" style="margin-top:6px">结束</label>
                <div class="input-group date form_date " data-date="" data-date-format="dd mm yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                    <input class="form-control" id="end-time" size="16" type="text" value="" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <input type="hidden" id="dtp_input2" value="" /><br />
            </div>

            <div class="col-lg-1 col-md-1">
                <button id="add-semester-submit" class="btn btn-adn"><i class="fa fa-check"></i> </button>
            </div>
        </div>
    </div>
    <!--/#添加新学期-->
    <div class="row">
        <div class="col-lg-12">
            <div></div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-8">
                    <div id="datepicker" class="calendar col-lg-8 " style="margin-top:4%;margin-left:-35%"></div>
                </div>
                <div class="col-lg-4">
                    <div class="terminfo">
                        @{
                            OCTS.Controllers.JiaoWuController.TermInfo termInfo = (OCTS.Controllers.JiaoWuController.TermInfo)ViewData["TermInformation"];
                            if (termInfo != null)
                            {
                                <div class="timeinfo" style="align-content:center">

                                    <h2>当前<span style="color:#808080">@termInfo.year</span>学年</h2>
                                    <div id="1" style="align-content:center">
                                        <h3>第<span style="color:#808080">@termInfo.weeks</span>周</h3>
                                    </div>
                                </div>
                                <br />
                                <div class="seinfo">
                                    <h5>本学期开始日期:@termInfo.startTime</h5>

                                    <h5>本学期结束日期:@termInfo.endTime</h5>

                                </div>
                            }
                        }
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
    

</body>

<style>
    .terminfo{
        margin-left:-13%;
    }
    .timeinfo {
        position: absolute;

        width: 300px;
    }

    .seinfo {
        position: absolute;
        top: 200px;
        width: 300px;
    }
</style>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        $(document).ready(function () {
            $("#add-semester-submit").click(function () {
                var startTime = $("#start-time").val();
                var endTime = $("#end-time").val();
                var data = {
                    "startTime": startTime,
                    "endTime": endTime
                }
                $.post("/JiaoWu/AddSemester", data, function (data) {
                    alert(data);
                })
            })
        })
    </script>


</body>