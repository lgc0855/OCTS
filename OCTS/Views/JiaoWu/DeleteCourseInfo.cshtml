@model OCTS.Models.Course
@{
    ViewBag.Title = "DeleteCourseInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>待删除课程信息</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("课程名称")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseName)
        </dd>

        <dt>
            @Html.DisplayName("课程开始时间")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseStartTime)
        </dd>

        <dt>
            @Html.DisplayName("课程结束时间")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseEndTime)
        </dd>



        <dt>
            @Html.DisplayName("教师姓名")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseTeacherName)
        </dd>

        <dt>
            @Html.DisplayName("课程学分")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseCredit)
        </dd>

        <dt>
            @Html.DisplayName("上课地点")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.coursePlace)
        </dd>



        <dt>
            @Html.DisplayName("课程学时")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseTime)
        </dd>

        <dt>
            @Html.DisplayName("课程状态")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isEnd)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("返回列表", "CourseInfo")
        </div>
    }
</div>

