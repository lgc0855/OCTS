@model IEnumerable<OCTS.Models.Course>

@{
    ViewBag.Title = "CourseInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Content/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-table-click-edit-row.css" rel="stylesheet" />
    <link rel="stylesheet" href="//rawgit.com/vitalets/x-editable/master/dist/bootstrap3-editable/css/bootstrap-editable.css">
</head>
<style type="text/css">
    h2{
        font-size:36px;
        text-align:center;
    }
</style>
<div>
<h2>课程信息表</h2>
</div>
<div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">教师表</div>
                <div class="panel-body">
                    <div id="toolbar1" class="btn-group">
                        <button id="btn_add_teacher" type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                        </button>
                        <button id="btn-batchAdd-teachers" type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-import" aria-hidden="true"></span>批量导入
                        </button>
                        <button id="btn_edit" type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
                        </button>
                        <button id="btn_delete_teachers" type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
                        </button>
                    </div>
                    <table id="teacher-table" data-toggle="table" data-url="/JiaoWu/getCourses" data-striped="true" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc" data-show-export="true">
                        <thead>
                            <tr>
                                <th data-field="state" data-checkbox="true">courseId</th>
                                <th data-field="courseName" data-sortable="true">课程名称</th>
                                <th data-field="courseStartTime" data-sortable="true">课程开始时间</th>
                                <th data-field="courseEndTime" data-sortable="true">课程结束时间</th>
                                <th data-field="courseRequireURL" data-sortable="true">要求URL</th>
                                <th data-field="courseOutlineURL" data-sortable="true">courseOutlineURL</th>
                                <th data-field="courseTeacherName" data-sortable="true">教师姓名</th>
                                <th data-field="courseCredit" data-sortable="true">courseCredit</th>
                                <th data-field="maxNumPerGroup" data-sortable="true">maxNumPerGroup</th>
                                <th data-field="minNumPerGroup" data-sortable="true">minNumPerGroup</th>
                                <th data-field="courseOutlineURL" data-sortable="true">courseOutlineURL</th>
                                <th data-field="courseTime" data-sortable="true">courseTime</th>
                                <th data-field="isEnd" data-sortable="true">isEnd</th>
                                <th data-formatter="operateFormatter" data-align='center' data-events='operateEvents'>操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div><!--/.row-->

</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/my_add/bootstrap-table.js"></script>
<script src="~/Scripts/my_add/bootstrap-table-export.js"></script>
<script src="//rawgit.com/hhurz/tableExport.jquery.plugin/master/tableExport.js"></script>

<script>
    $(document).ready(function () {
        var $table = $('#teacher-table');
    })
</script>