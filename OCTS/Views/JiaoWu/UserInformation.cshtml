                </div>
            </div>
            <table class="table">
                <tr style="align-content:center">
                    <th>姓名</th>
                    <th>@{
                        var userName = ViewData["username"];
                        if (userName != null)
                        {
                            <div text-align:center">@userName.ToString() </div>
                        }
                    }</th>                  
                </tr>
                <tr>
                    <th>工号</th>
                    <th>
                        @{
                        var userId = ViewData["userid"];
                        if (userId != null)
                        {

                            <div text-align:center">@userId.ToString() </div>
                        }
                    }
                </th>
            </tr>
                <tr>
                    <th>性别</th>
                    <th>
                        @{
                        var userSex = ViewData["usersex"];
                        if (userSex != null)
                        {

                            <div text-align:center">@userSex.ToString() </div>
                        }
                    }
                </th>
            </tr>
                <tr>
                    <th>邮箱</th>
                    <th>
                        @{
                        var userEmail = ViewData["useremail"];
                        if (userEmail != null)
                        {

                            <div text-align:center">@userEmail.ToString() </div>
                        }
                    }
                </th>
            </tr>
            <tr>
                    <th>电话</th>
                    <th>
                        @{
                        var userPhone = ViewData["userphone"];
                        if (userPhone != null)
                        {

                            <div text-align:center">@userPhone.ToString() </div>
                        }
                    }
                </th>
            </tr>
            </table>
            <!--修改个人信息页面-->
            <div class="modal fade " id="updateinfoModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
                <div class="modal-dialog">
                    <div class="modal-content forgetPasswordModal-content" style="text-align:center">
                        <form action="/JiaoWu/Update">
                            <div class="modal-body forgetPasswordModal-body">
                                <p><label style="width:50px">姓名</label>  <input name="name" type="text" required></p>
                                <p><label style="width:50px">Email</label><input name="email" type="email"></p>
                                <p><label style="width:50px">电话</label><input name="phone" type="text"></p>
                                <p><label style="width:50px">密码</label><input name="password" type="password" required></p>
                            </div>
                            <div class="modal-footer" style="text-align:center">
                                <button class="btn btn-primary" data-dismiss="modal">关闭</button>
                                <button id="Submit" type="submit" class="btn btn-danger">提交</button>
                            </div>
                        </form>
                    </div>
                </div>
