@model OCTS.Models.TaskInformation

@{
    ViewBag.Title = "CreateTaskInfo";
    Layout = "~/Views/Shared/_Teacher2.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>创建作业信息</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("作业名称", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.taskName)
                @Html.ValidationMessageFor(model => model.taskName)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("作业开始时间", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.taskStartTime)
                @Html.ValidationMessageFor(model => model.taskStartTime)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("作业结束时间", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.taskEndTime)
                @Html.ValidationMessageFor(model => model.taskEndTime)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("最大提交次数", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.taskMaxSubmitTime)
                @Html.ValidationMessageFor(model => model.taskMaxSubmitTime)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("作业要求", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.taskRequire)
                @Html.ValidationMessageFor(model => model.taskRequire)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
